[package]
name = "spade"
version = "2.15.0"
authors = ["Stefan Altmayer <stoeoef@gmail.com>"]
edition = "2021"
documentation = "https://docs.rs/spade"
description = "Delaunay triangulations for the rust ecosystem"
repository = "https://github.com/Stoeoef/spade"
license = "MIT OR Apache-2.0"
autobenches = false
categories = ["algorithms", "data-structures", "graphics", "mathematics"]
keywords = ["Delaunay", "CDT", "geometry", "triangulation", "voronoi"]

[lib]
bench = false

[features]
default = ["std"]
std = []

[dependencies]
smallvec = "1.15.1"
robust = "1.2.0"
num-traits = "0.2.19"
hashbrown = "0.15.5"

[dependencies.serde]
package = "serde"
optional = true
version = "1.0.219"
default-features = false
features = ["derive", "alloc"]

[dependencies.mint]
package = "mint"
optional = true
default-features = false
version = "0.5.9"

[workspace]
members = ["delaunay_compare"]

[dev-dependencies]
approx = "0.5.1"
rand = "0.9.2"
cgmath = "0.18.0"
svg = "0.18.0"
float_next_after = "1.0.0"
image = "0.25.6"
tiny-skia = "0.11.4"
criterion = { version = "0.7.0", features = ["html_reports"] }
base64 = "0.22.1"
anyhow = "1.0.99"
shapefile = "0.7.0"
proptest = "1.7.0"

[[bench]]
name = "benchmarks"
harness = false

[lints.rust]
unexpected_cfgs = { level = "warn", check-cfg = ['cfg(fuzzing)'] }
